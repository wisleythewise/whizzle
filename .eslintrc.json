{
    "env": {
      "browser": true,
      "es2021": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "object-curly-spacing": ["error", "never"],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "prettier/prettier": ["error", {
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "trailingComma": "es5"
      }]
    }
  }
  